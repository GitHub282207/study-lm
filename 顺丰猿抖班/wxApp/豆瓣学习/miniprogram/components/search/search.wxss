/* components/search/search.wxss */
.search-bar{
    background-color: #41be57;
    padding: 20rpx;
}
.container{
    width: 100%;
    height: 60rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon{
    font-size: 40rpx;   
}
.search-input{
    width: 100%;
    height: 60rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}
.text{
    min-height: 40rpx;
    height: 40rpx;
    font-size: 24rpx;
}