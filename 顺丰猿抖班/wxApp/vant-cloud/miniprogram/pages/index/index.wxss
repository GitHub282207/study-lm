/* miniprogram/pages/index/index.wxss */
.new-item{
    width: 80%;
    background-color: #fff;
    border-radius: 38rpx;
    height: 200rpx;
    text-align: center;
    margin: 40rpx auto;
    box-shadow: 0px 7px 20px #ececec;
    display:flex;
    justify-content: space-between;/*图片去到左边，文字去到右边，中间填上空格*/
    padding: 20rpx;
    transition: all .5s;/*监听所有属性的变化*/

}
.new-item image{
    width: 124rpx;
    height: 124rpx;
}
.right-conner{
    display: flex;
    flex-direction: column;
    justify-content: space-between;/*y轴方向弹性布局，一个在最上面，一个在最下面，中间被空白填充*/
}
.right-conner .item-name{
    margin-right: 14rpx;
}
.icon-arrow{
    text-align: right;
    padding-right: 13rpx;
}
.new-item:hover{
    box-shadow: none;
}
